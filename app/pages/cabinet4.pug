//- layouts/layout.pug
extend layouts/_layout.pug

block title
    | Личный кабинет - Просмотренные товары

block content

    header.header-breadcrumbs.back-gray
        .container
            .row
                .col-12
                    ul.breadcrumbs
                        li
                            a(href='./' title='') Главная
                        li
                            a(href='cabinet1.html' title='') Личный кабинет

    section.section-sign.section-cabinet
        .bucket-header
            .cabinet-header
                .container
                    .row
                        .col-md-10
                            .row.row-heading.cabinet-heading
                                .col-12
                                    h1 Личный кабинет
            .cabinet-mobile
                .back-gray
                    .container
                        .row
                            .col-12
                                ul.cabinet-log
                                    li
                                        a(href='cabinet1.html' title='')
                                            include svgs/login2.svg
                                            | Виталий
                                    li
                                        a(href='signin.html' title='')
                                            include svgs/login.svg
                                            | Выход

            .container
                .row
                    .col-md-3
                        ul.filter-top--main.cabinet-filter.hidden-xs
                            li
                                a(href='cabinet1.html' title='') Ваши данные
                            li
                                a(href='bucket1.html' title='') Корзина
                            li
                                a(href='cabinet2.html' title='') Просмотренные товары
                            li
                                a(href='cabinet3.html' title='') История заказов
                            li
                                a(href='cabinet4.html' title='').active Бонусы
                        hr.hidden-xs
                        a(href='#' title='').link-logout Выход

                    .col-12.visible-xs
                        .cabinet-sublog
                            .cabinet-sublog--heading История заказов
                            .cabinet-sublog--nav.cabinet-sublog--nav-lonely
                                ul
                                    li
                                        a(href='cabinet1.html' title='')
                                            include svgs/close.svg


                    .col-md-9.sign-container.cabinet-container
                        .row
                            .col-12
                                a(href='catalog.html' title='').special
                                    .special--header
                                        .special--header-image
                                            img(src='img/special/special1.png' title='')
                                        .special--header-text
                                            h3 Акция
                                    .special--footer
                                        .special--footer-left
                                            h4 Распродажа коллекции плитки
                                        .special--footer-right
                                            span.link-more
                                                span.link-more--text Подробнее
                                                span.link-more--arrow
