.section-bucket.section-bucket-modal(style='display:none')#bucket-modal
    .bucket-header
        .container
            .row.bucket-heading
                .col-md-4
                    h1 Корзина
                .col-6.col-md-4
                    a(href='' title='').link-bucket-nav.left.active
                        include ../svgs/bucket-big.svg
                        | Товары
                .col-6.col-md-4
                    a(href='' title='').link-bucket-nav.right
                        include ../svgs/delivery-big.svg
                        | Доставка
    .container.bucket-container
        .row
            .col-md-12
                .bucket-item
                    .bucket-item--left
                        .bucket-item--image
                            img(src='img/goods/goods1.png' title='')
