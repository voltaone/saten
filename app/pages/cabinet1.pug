//- layouts/layout.pug
extend layouts/_layout.pug

block title
    | Личный кабинет - Ваши данные

block content

    header.header-breadcrumbs.back-gray
        .container
            .row
                .col-12
                    ul.breadcrumbs
                        li
                            a(href='/' title='') Главная
                        li
                            a(href='cabinet1.html' title='') Личный кабинет

    section.section-sign.section-cabinet
        .bucket-header
            .container
                .row
                    .col-md-10
                        .row.row-heading.cabinet-heading
                            .col-12
                                h1 Личный кабинет
            .cabinet-mobile
                .back-gray
                    .container
                        .row
                            .col-12
                                ul.cabinet-log
                                    li
                                        a(href='' title='')
                                            include svgs/login2.svg
                                            | Виталий
                                    li
                                        a(href='' title='')
                                            include svgs/login.svg
                                            | Выход

            .container
                .row
                    .col-md-4
                        ul.filter-top--main.cabinet-filter
                            li
                                a(href='cabinet1.html' title='').active Ваши данные
                            li
                                a(href='bucket1.html' title='') Корзина
                            li
                                a(href='cabinet2.html' title='') Просмотренные товары
                            li
                                a(href='cabinet3.html' title='') История заказов
                            li
                                a(href='cabinet4.html' title='') Бонусы
                        hr.hidden-xs
                        a(href='' title='').link-logout Выход

                    .col-12.visible-xs
                        .cabinet-sublog
                            .cabinet-sublog--heading Ваши данные
                            .cabinet-sublog--nav
                                ul
                                    li
                                        a(href='' title='')
                                            include svgs/cabinet.svg
                                    li
                                        a(href='cabinet1.html' title='')
                                            include svgs/close.svg


                    .col-md-8.sign-container
                        form.form-cabinet
                            a(href='').link-edit
                                include svgs/cabinet.svg
                                | Редактировать
                            .cabinet-data
                                .cabinet-data--heading
                                    p Имя
                                .cabinet-data--text
                                    .form-group
                                        span.form-group--span
                                        input(type='text' value='Виталий Коновалец' disabled)
                            .cabinet-data
                                .cabinet-data--heading
                                    p Электронная почтa
                                .cabinet-data--text
                                    .form-group
                                        span.form-group--span
                                        input(type='text' value='vitaliy@gmail.com' disabled)
                            .cabinet-data
                                .cabinet-data--heading
                                    p Телефон
                                .cabinet-data--text
                                    .form-group
                                        span.form-group--span
                                        input(type='text' value='+38 (099) 232 22 33' disabled)
                            hr.cabinet-hr
                            .cabinet-data
                                .cabinet-data--heading
                                    p Адреса для доставок
                                .cabinet-data--text
                                    .form-group.form-address.disabled
                                        span.form-group--span
                                        input(type='text' value='г. Киев, ул. Щорса 34' disabled)
                                    .form-group.form-address.disabled
                                        span.form-group--span
                                        input(type='text' value='г. Киев, ул. Белорусская 22' disabled)
                                    .form-group.form-address.disabled
                                        span.form-group--span
                                        input(type='text' value='г. Одесса, ул. Леонтовича 17' disabled)

                                    button(type='submit').button Применить