p.product-warranty
  font-size: $s12
  letter-spacing: .8px;
  +mobile()
    margin-bottom 57px
    margin-top 0
    line-height normal

.product-filter
  max-width 165px
  padding-top 8px
  padding-bottom 8px
  +mobile()
    max-width unset
  &--brand
    display flex
    justify-content center
    margin-bottom 48px
    max-width: 165px
    position: relative;
    z-index: 200;
    flex-wrap: wrap;
    +mobile()
      margin-bottom 0
      justify-content flex-start
    a
      img
        max-height 50px
        height 100%
  .available
    text-align center
    line-height: 2.12;
    letter-spacing: 1.1px;
    font-size $s16
    margin-bottom 35px
    +mobile()
      text-align left
  &--discount-text
    color $red
    font-size $s24
    font-weight 600
    text-align center
    max-width 165px
    letter-spacing 2px
    margin-top: 37px;
    +mobile()
      text-align: left;
      max-width: unset;
      font-size: 1.25rem;
      margin-top 20px

.product-price
  font-size $s24
  color $blue
  letter-spacing: 1.6px;
  font-weight 600
  margin-bottom 17px
  +mobile()
    margin-bottom 42px

.product-description
  z-index 20
  position relative
  flex-wrap nowrap
  justify-content space-between
  margin-bottom 181px
  +portrait()
    flex-wrap wrap
  +mobile()
    flex-wrap wrap
    margin-bottom 44px
  .col.col-product-1
    flex 1 1 49.5%
    max-width 49.5%
    +portrait()
      flex 1 1 100%
      max-width 100%
    +mobile()
      flex 1 1 100%
      max-width 100%
      padding-bottom: 20px;
  .col.col-product-2
    flex 1 1 44.7%
    max-width 44.7%
    +portrait()
      flex 1 1 100%
      max-width 100%
    +mobile()
      flex 1 1 100%
      max-width 100%
  hr
    width 100%
    margin 15px 0 11px
    background $gray-line
  hr.hr-big
    margin 23px 0 6px


.product-slider-container
  position relative
  padding-top: 8px;
  height 100%
  +portrait()
    margin-bottom: 70px;
  +mobile()
    padding-top 20px

.product-buttons
  margin-bottom: 61px;
  .button-blue
    position relative
    z-index 11
    background $trans
    &:hover + .button-fast:after
      background $black
  .button-fast
    position relative
    z-index 10
    background $trans
    &:hover
      color $white
      &:after
        top 0
    &:after
      pseudo(block,absolute)
      top -50px
      left 0
      right 0
      height 50px
      background $blue
      z-index -1
      transitions()
  .button-fast:hover + .button-blue
    color $black