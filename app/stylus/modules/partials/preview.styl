.preview
  display flex
  width 380px
  overflow hidden
  flex-shrink: 0;
  +mobile()
    width auto
  &-block
    flex 1 0 calc(50% - 15px)
    max-width 165px
    margin-right 30px
    display none
    +mobile()
      position static
      visibility visible
      opacity 1
    &:hover
      .preview-block--image
        box-shadow: 0 1px 2px 0 rgba(0, 0, 0, .15);
        transform translateY(5px)
      .preview-block--description
        opacity .5
    &--image
      background $white
      display flex
      align-items center
      justify-content center
      height: 155px;
      box-shadow: 0 2px 24px 0 rgba(0, 0, 0, .15);
      overflow hidden
      margin-bottom 15px
      transitions()
      img
        max-height 100%
    &--description
      transitions()

