.special
  display block
  position relative
  z-index 2
  margin-bottom 55px
  &--header
    height: 263px
    position relative
    &-image
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      z-index 3
      display flex
      align-items center
      justify-content center
      img
        min-height 100%
    &-text
      position absolute
      z-index 4
      bottom: 28px;
      left: 19px;
      h3
        text-transform uppercase
        font-size: 2.500rem
        line-height: 0.75
        letter-spacing: 1px
        color $white
        margin-bottom 0
  &--footer
    display flex
    justify-content space-between
    align-items center
    padding-top: 24px
    padding-bottom: 24px
    &-left
      padding-left 19px
      h4
        font-size: $s24
        font-weight: 700;
        line-height: 1.25;
        text-align: left;
        color: $black1
        margin-bottom 0
    &-right
      flex 1 1 242px
      max-width 242px
      .link-more
        width 100%
        .link-more--text
          color $blue
        .link-more--arrow
          &:before, &:after
            background $blue

