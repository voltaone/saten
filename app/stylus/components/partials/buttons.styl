@import "../../utilities/vars"
@import "../../utilities/mixins"

button
  border none
  cursor pointer
  transitions()
  &:focus
    outline none

.button
  display block
  max-width 263px
  width 100%
  text-align center

  background $black
  color $white

  padding-top 9px
  padding-bottom 11px

  margin-bottom 1rem

  letter-spacing: 1px;

  &:hover
    color $black
    background $gray

.button-big
  max-width: 359px;
  margin 0 auto
  font-size: $s22
  font-weight: 500
  line-height: 1.18;
  letter-spacing: 1.2px;
  padding: 14px 0 21px;
