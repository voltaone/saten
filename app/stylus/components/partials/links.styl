@import "../../utilities/vars"
@import "../../utilities/mixins"

a
  text-decoration none
  transitions()
  &:hover
    text-decoration none
  &:focus
    text-decoration none
    outline none

.link-logo
  display block
  max-width 165px
  max-height 25px
  padding 2px 0
  &--img
    display inline-block
    max-width 22px
    margin-right 15px
  &--text
    display inline-block
    max-width 128px
    margin-top: -1px

.link-phone-nav
  color $blue-text
  font-weight 500
  letter-spacing 1.125px
  margin-top: 1px;
  display: inline-block;
  font-size $s22




.link-up
  position fixed
  right 15px
  bottom 15px
  width 30px
  height 30px
  display flex
  justify-content center
  align-items center
  opacity 0

.link-up.visible
  opacity 1
