form {}

.form-half-input
  display flex
  flex-wrap wrap
  flex-direction row
  justify-content space-between
  input
    flex 1 1 calc(50% - 20px)
    max-width calc(50% - 20px)
    +mobile()
      flex 1 1 100%
      max-width 100%

.form-three-input
  display flex
  flex-wrap wrap
  flex-direction row
  justify-content space-between
  input
    flex 1 1 calc(37% - 20px)
    max-width calc(37% - 20px)
    +mobile()
      flex 1 1 100%
      max-width 100%
    &:last-child
      flex 1 1 calc(26% - 20px)
      max-width calc(26% - 20px)
      +mobile()
        flex 1 1 100%
        max-width 100%

.form-group
  position relative
  margin-bottom 10px

  label
    position absolute
    top 0
    left 20px
    bottom 0
    margin 0

  input + label
    display flex
    align-items center

  textarea + label
    top 20px
    bottom auto

  input, textarea
    font-size: $s16
    font-weight: 500;
    line-height: 2.0;
    padding-left 60px
    margin 0
    border-bottom 2px solid $blue
    +placeholder()
      font-size $s16

  span
    color $red
    font-size $s12
    position absolute
    top -4px
    left 0
    opacity 0

.form-group.error

  input, textarea
    border-color $red
    color $red
    +placeholder()
      color $red
  span
    opacity 1

  svg
    g
      fill $red


.form-nav
  display flex
  height 100%
  input
    border none
    width calc(100% - 60px)
    height 100%
    margin 0
    padding 0
    +portrait()
      padding-right: 20px;
  button
    width: 60px;
    height: 54px;
    background $aqua-back
    color $white
    font-size $s26

.form-footer
  input
    line-height: 2.95;
    letter-spacing: 0.7px;
    font-size .875rem
    padding 0
    color $white
    margin 0
    +placeholder()
      color $white

    +mobile()
      margin-bottom 15px

  .button
      +portrait()
        max-width unset
      +mobile()
        margin 30px 0
        max-width unset

.form-search
  position relative
  z-index 10
  .form-group
    position relative
    button
      position absolute
      right 0
      top 0
      color $aqua-back
      font-size: 1.5rem
      padding: 7px 20px 9px;
      background $white
    input
      padding-left 26px
      border-bottom 0
      font-size: $s18
      font-weight: 500;
      letter-spacing: 1.4px;
      margin-bottom 0
      background $white
      +placeholder()
        color $black
        font-size: $s18


.form-delivery
  display block
  input
    line-height: 2;
    padding-top: 0;
    padding-bottom: 11px;
    padding-left: 18px;
    font-size $s16
    margin-bottom 0
    +placeholder()
      font-size $s16
    +mobile()
      margin-bottom 10px
      padding-left 0

.form-wish
  display flex
  justify-content space-between
  margin-top: 39px;
  +mobile()
    margin-top 0
  p
    flex: 1 1 calc(37% - 20px);
    max-width: calc(37% - 20px);
    margin 2px 0
    +mobile()
      display none
  input
    flex 1 1 calc(63% - 10px)
    max-width calc(63% - 10px)
    +mobile()
      flex 1 1 100%
      max-width 100%

.form-question
  display flex
  flex-wrap wrap
  justify-content space-between
  .form-group
    flex 1 1 calc(50% - 15px)
    max-width calc(50% - 15px)
    +mobile()
      flex 1 1 100%
      max-width 100%
  .form-group.form-group-textarea
    flex 1 1 100%
    max-width 100%
  .button
    margin 21px auto


