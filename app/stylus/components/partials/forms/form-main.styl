
.form-half-input
  display flex
  flex-wrap wrap
  flex-direction row
  justify-content space-between
  input
    flex 1 1 calc(50% - 20px)
    max-width calc(50% - 20px)
    +mobile()
      flex 1 1 100%
      max-width 100%

.form-three-input
  display flex
  flex-wrap wrap
  flex-direction row
  justify-content space-between
  input
    flex 1 1 calc(37% - 20px)
    max-width calc(37% - 20px)
    +mobile()
      flex 1 1 100%
      max-width 100%
    &:last-child
      flex 1 1 calc(26% - 20px)
      max-width calc(26% - 20px)
      +mobile()
        flex 1 1 100%
        max-width 100%

.form-group
  position relative
  margin-bottom 10px

  label
    position absolute
    top 20px
    left 20px
    bottom 0
    margin 0
    +mobile()
      left 10px
      top 18px

  &--icon-success
    display none

  textarea + label
    top 20px
    bottom auto
    +mobile()
      top 18px

  input, textarea
    font-size: $s16
    font-weight: 500;
    line-height: 2.0;
    margin 0
    border-bottom 2px solid $blue
    padding: 12px 0 11px 60px
    +mobile()
      padding-left 38px
    +placeholder()
      font-size $s16

  &--span
    color $red
    font-size $s12
    position absolute
    top -4px
    left 0
    opacity 0


.form-address
  position relative
  &:after, &:before
    pseudo(block, absolute)
    width 2px
    height 15px
    background $blue
    top 5px
    transform rotate(45deg)
    right 5px
    cursor pointer
    opacity 0
    visibility hidden
    &:hover
      opacity 1
  &:after
    transform rotate(-45deg)
  input
    border-color rgba(255,255,255,.2)




.form-nav
  display flex
  height 100%
  input
    border none
    width calc(100% - 60px)
    height 100%
    margin 0
    padding 0
    +portrait()
      padding-right: 20px;
  button
    width: 60px;
    height: 54px;
    background $aqua-back
    color $white
    font-size $s26
    &:hover
      background #557279
      +mobile()
        background $aqua-back

.form-footer
  input
    line-height: 2.95;
    letter-spacing: 0.7px;
    font-size .875rem
    padding 0
    color $white
    margin 0
    +placeholder()
      color $white

    +mobile()
      margin-bottom 15px



  .button
      +portrait()
        max-width unset
      +mobile()
        margin 30px 0
        max-width unset

.form-search
  position relative
  z-index 10
  padding-top 5px
  .form-group
    position relative
    margin-bottom 0
    button
      position absolute
      right 0
      top 0
      color $aqua-back
      font-size: 1.5rem
      padding: 7px 20px 9px;
      background $white
    input
      border-bottom 0
      font-size: $s18
      font-weight: 500;
      letter-spacing: 1.4px;
      margin-bottom 0
      background $white
      padding 4px 26px
      +placeholder()
        color $black
        font-size: $s18
      +mobile()
        margin-bottom 35px


.form-delivery
  display block
  input
    line-height: 2;
    padding-top: 0;
    padding-bottom: 11px;
    padding-left: 18px;
    font-size $s16
    margin-bottom 0
    +placeholder()
      font-size $s16
    +mobile()
      margin-bottom 10px
      padding-left 0

.form-wish
  display flex
  justify-content space-between
  margin-top: 39px;
  +mobile()
    margin-top 0
  p
    flex: 1 1 calc(37% - 20px);
    max-width: calc(37% - 20px);
    margin 2px 0
    +mobile()
      display none
  input
    flex 1 1 calc(63% - 10px)
    max-width calc(63% - 10px)
    +mobile()
      flex 1 1 100%
      max-width 100%

.form-question
  display flex
  flex-wrap wrap
  justify-content space-between
  .form-group
    flex 1 1 calc(50% - 15px)
    max-width calc(50% - 15px)
    +mobile()
      flex 1 1 100%
      max-width 100%
  .form-group.form-group-textarea
    flex 1 1 100%
    max-width 100%
  .button
    margin 21px auto


.form-sign
  padding 27px 0
  position relative
  top -91px
  z-index 40
  .button
    margin 34px auto 10px
  +mobile()
    position static
    padding-top 0

.form-link
  text-align center

.form-signup
  position relative
  z-index 40
  display flex
  flex-wrap wrap
  justify-content space-between
  top -23px
  .form-group
    flex 1 1 calc(50% - 15px)
    max-width calc(50% - 15px)
    +mobile()
      flex 1 1 100%
      max-width 100%
  .button
    margin 24px auto
  +mobile()
    position static


.form-cabinet
  position relative

