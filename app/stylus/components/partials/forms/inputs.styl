@import '../../utilities/vars'
@import '../../utilities/mixins'

input
  -webkit-appearance none
  width 100%
  margin-bottom 1rem
  border 1px solid $black
  padding 11px 15px 12px
  transitions()
  &:focus
    outline none
    border-color green
  &:-webkit-autofill
    -webkit-box-shadow: inset 0 0 0 50px #fff !important
    -webkit-text-fill-color: #999 !important  
  +placeholder()
    color $gray

textarea
  -webkit-appearance none
  resize none
  margin-bottom 1rem
  width 100%
  height 250px
  padding 11px 15px 12px
  +placeholder()
    color $gray
  &:focus
    outline none
    border-color green

label {}