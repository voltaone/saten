@import '../../utilities/vars'
@import '../../utilities/mixins'

input
  -webkit-appearance none
  width 100%


  border none
  border-bottom 1px solid $blue-text

  margin-bottom 1rem
  padding 11px 0 12px
  background $trans

  transitions()
  &:focus
    outline none
    border-color green
  &:-webkit-autofill
    -webkit-box-shadow: inset 0 0 0 50px #fff !important
    -webkit-text-fill-color: #999 !important  
  +placeholder()
    color $aqua-text
    font-size $s14

textarea
  -webkit-appearance none
  resize none
  margin-bottom 1rem
  width 100%
  height 250px
  padding 11px 15px 12px
  +placeholder()
    color $gray
  &:focus
    outline none
    border-color green

label {}