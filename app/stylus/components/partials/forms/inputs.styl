@import '../../utilities/vars'
@import '../../utilities/mixins'

input
  -webkit-appearance none
  width 100%
  border-radius: 0;

  border none
  border-bottom 2px solid $blue

  margin-bottom 1rem
  padding 11px 0 12px
  background $trans

  transitions()

  &:-webkit-autofill
    -webkit-box-shadow: inset 0 0 0 50px #fff !important
    -webkit-text-fill-color: #999 !important  
  +placeholder()
    color $aqua-text
    font-size $s14
    transitions()
  &:focus
    outline none
    border-color $aqua-back
    +placeholder()
      opacity .2

textarea
  -webkit-appearance none
  resize none
  margin-bottom 1rem
  width 100%

  padding 11px 15px 12px

  height 85px
  background $trans
  border none
  border-bottom 1px solid $blue

  transitions()

  +placeholder()
    color $gray
    transitions()

  &:focus
    outline none
    border-color $aqua-back
    +placeholder()
      opacity .2
  +mobile()
    height 160px


input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button
  -webkit-appearance: none;
  margin: 0;

input[type=number]
  -moz-appearance:textfield;


input[disabled]
  border-color $black
  +placeholder()
    color $black


.input-number
  border 2px solid $aqua-back
  max-width 68px
  padding 0
  text-align center
  font-size: $s14
  line-height: 22px
  letter-spacing: 1px;
  margin-bottom: 19px;
  background $white
  +mobile()
    margin-bottom 37px
    max-width 130px
    height 40px

  &:focus
    border-color $blue

.input-number.input-number-big
  max-width 90px
  +mobile()
    max-width 115px

