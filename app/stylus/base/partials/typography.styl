@import '../../utilities/vars'
@import '../../utilities/mixins'

h1
  font(2.5rem, $black, 900, normal)
  margin-bottom 2.5rem


h2
  font($s28, $black, 500, normal)
  margin-bottom 2.75rem
  letter-spacing: 1px;
  text-align center
  +mobile()
    font-size: $s24
    text-align left

h2.slider-header--before
  margin-bottom 1.750rem
  letter-spacing: 1px;
  text-align center


h2.slider-header
  font(2.5rem, $white, 500, 1.15)
  margin-bottom 2rem
  letter-spacing: 1px;
  text-align left
  position relative
  z-index: 3

h3
  font(2.875rem, $black, 700, 0.65)
  margin-bottom 1.875rem
  letter-spacing: 2.1px;

h4
  font($s18, $black, 500, 1.67)
  margin-bottom 0
  color: $black-text

h5
  font($s14, $black, 500, 1.57)
  letter-spacing: 1px;

h6
  font($s20, $white, 500, normal)
  letter-spacing: 1.3px;
  margin-bottom 9px

p
  font(1rem, $black, 400, normal)
  margin-bottom 1rem

hr
  border: 0;
  height: 1px;
  background: $aqua-text
  width: 165px;
  margin 20px 0 33px

.black
  color $black

.white
  color $white

.gray
  color $gray