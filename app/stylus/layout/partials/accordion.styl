@import '../../utilities/vars'
@import '../../utilities/mixins'

.ui-accordion
  .ui-accordion-header
    background $aqua-back
    color $black
    cursor pointer
    padding 1rem
    transitions()
    font-size: $s18
    font-weight: 500;
    line-height: 1.11;
    letter-spacing: 1.3px;
    text-align center
    position relative
    margin-bottom 3px
    &:after
      triangle($black, down, 12px)
      left calc(50% - 12px)
      bottom -12px
      opacity 0
      transitions()
    &:focus
      outline none
    &:hover
      background $black
      color $white
  .ui-state-active
    background $black
    color $white
    &:after
      opacity 1
  .ui-accordion-content
    padding 2rem 0
    p, ul li
      font-size 1rem
      line-height 1.66

#accordion
  .accordion-button
    display none
    transitions()
    +mobile()
      display block

#accordion2
  .accordion-button
    display none
    height 51px
    background $white
    color #b3c9cf
    margin-bottom 18px
    transitions()
    text-align left
    &:hover
      background $aqua-back
      color $black
    &:before, &:after
      pseudo(block, absolute)
      width 16px
      height 2px
      top 25px
      right 10px
      left auto
      opacity 0
      border 0
      background $black
      transitions()
    &:before
      transform rotate(45deg)
    &:after
      transform rotate(-45deg)
    +mobile()
      display block
  .ui-state-active
    background $aqua-back
    color $black
    &:before, &:after
      opacity 1
  .ui-accordion-content
    padding-top 0

  .accordion-button.hidden
    opacity 0
    height 0
    padding 0
    margin 0

#accordion3.ui-accordion
  .ui-accordion-header
    background $trans
    font-size: $s20
    font-weight: 500;
    line-height: 1.6;
    color: rgba(0, 0, 0, .4)
    text-align left
    position relative
    border-bottom 1px solid #e7e7e7;
    padding: 6px 50px 10px 0
    +mobile()
      padding-right 30px
    &:hover
      color $black
    &:after, &:before
      pseudo(block, absolute)
      width 14px
      height 2px
      background $blue
      top 23px
      left auto
      right 28px
      border: none
      transitions()
      opacity 1
      +mobile()
        right 20px
    &:after
      transform rotate(90deg)
  .ui-state-active
    color $black
    border-color $trans
    &:after
      transform none
  .ui-accordion-content
    padding: 1.125rem 0 2.25rem;
    border-bottom 1px solid #e7e7e7
    ul
      li
        margin-bottom 10px
        &:before
          top 13px
