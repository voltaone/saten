@import '../../utilities/vars'
@import '../../utilities/mixins'

.slick-loading .slick-list
  background: #fff url('../img/slick/ajax-loader.gif') center center no-repeat;

@font-face
  font-family: 'slick';
  font-weight: normal;
  font-style: normal;
  src: url('../fonts/slick/slick.eot');
  src: url('../fonts/slick/slick.eot?#iefix') format('embedded-opentype'), url('../fonts/slick/slick.woff') format('woff'), url('../fonts/slick/slick.ttf') format('truetype'), url('../fonts/slick/slick.svg#slick') format('svg');




.slider
  position relative
  overflow hidden
  margin-bottom 1rem
  .arrow
    position absolute
    text-align center
    z-index 100
    top 41%
    cursor pointer
    max-width 130px
    height 60px
    width 100%
    background $black
    color $white
    top auto
    bottom 0px
    .fa
      font-size 3.5rem

  .arrow.left
    left 0
  .arrow.right
    right 0

  .slide
    display flex
    justify-content center
    align-items center
    height 100%
    overflow hidden
    &:focus
      outline none


  .slider-counter
    position absolute
    z-index 100
    right 0
    bottom 0
    font-size 3em


  .slick-dots
    bottom 0
    left 0
    right 0
    position absolute
    display flex
    flex-direction row
    justify-content center
    li
      margin 5px
      button
        padding 0
        width 15px
        height 15px
        border-radius 50%
        background $gray
        color $trans
        &:hover
          background $black
          opacity .6
    .slick-active
      button
        background $black

.slider-main
  padding-bottom 26px
  .arrow.left
    left calc((100% - 1170px + 30px) / 2)
  .arrow.right
    left calc((100% - 1170px + 266px + 30px) / 2)
  .slide
    position relative
    height 556px
    &-text
      padding-top 63px
    &-img
      position absolute
      top 0
      left 0
      bottom 0
      right 0
      display flex
      align-items center
      justify-content center
      z-index -1
      img
        width 100%

.slider-four
  overflow visible
  padding-bottom 125px
  .slick-list
    overflow visible
    z-index 200
    position relative
  .goods-block
    margin: 15px;
  .arrow
    bottom 16px
    z-index 3
  .arrow.left
    left auto
    right 148px
  .arrow.right
    left auto
    right 15px

.slider-container
  position relative
  overflow hidden

.slider-four + .slider-counter
  position absolute
  font-size: 3.750rem
  font-weight: 700;
  line-height: 0.5;
  letter-spacing: 2.7px;
  color: $aqua-back;
  right 300px
  bottom 48px
  z-index 100