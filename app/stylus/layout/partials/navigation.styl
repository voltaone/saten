@import '../../utilities/vars'
@import '../../utilities/mixins'

@import "../libs/rew-sidenav/sidenav.styl"
//@import "../libs/rew-downnav/downnav.styl"

nav
  background $white
  transitions()

.menu
  list-flex(row)
  justify-content flex-end
  align-items center
  height 100%
  +mobile()
    flex-direction column
    justify-content flex-start
    align-items flex-start
  li
    margin 0 4px
    +mobile()
      margin 0
    &:last-child
      margin-right 0
    a
      display block
    .selected
      color $black

.nav-mobile
  display none
  +mobile()
    display block



.nav-icon
  width 30px
  height 22px
  position relative
  margin 14px 0
  cursor pointer
  transitions()
  transform rotate(0deg)
  float right
  span
    display block
    position absolute
    height 3px
    width 100%
    background $black
    border-radius 2px
    opacity 1
    left 0
    transform rotate(0deg)
    transitions()
    &:nth-child(1)
      top 0px
    &:nth-child(2), &:nth-child(3)
      top 9px
    &:nth-child(4)
      top 18px

.nav-icon.open
  span
    &:nth-child(1)
      top 18px
      width 0%
      left 50%
    &:nth-child(2)
      transform rotate(45deg)
    &:nth-child(3)
      transform rotate(-45deg)
    &:nth-child(4)
      top 18px
      width 0%
      left 50%