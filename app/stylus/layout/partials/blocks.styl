@import '../../utilities/vars'
@import '../../utilities/mixins'

//ARTICLE

article
  padding-top 12px
  padding-bottom 60px
  p, ul li
    line-height: 2.0
    margin-bottom 33px
  ul
    li
      position relative
      padding-left 25px
      &:before
        pseudo(block, absolute)
        width: 14px;
        height: 2px;
        left 0
        top 16px
        background $aqua-text

.article-accordion
  padding-top 8px
  padding-bottom 100px
  +portrait()
    padding-bottom 60px
  +mobile()
    padding-bottom 0

.article-about
  position relative
  z-index 20
  padding-top 0
  padding-bottom 0
  +mobile()
    padding-bottom 40px

.article-signup
  position relative
  z-index 70
  padding-bottom 96px
  p
    margin-bottom $s24
  +mobile()
    padding-bottom 35px


//ASIDE

aside
  h2
    font-size $s24
    text-align left
    letter-spacing: 2px
    margin-bottom: 28px;
    margin-top 24px
    +mobile()
      margin-top 0
      font-size: $s18
      letter-spacing: 1.5px
      margin-bottom 30px

//MAIN

main
  background $white
  transitions()
  +mobile()
    position relative
    z-index 100

//SECTION
section
  padding-bottom 163px
  +mobile()
    padding-bottom 57px

.back-gray
  background $gray-back

.back-white
  background $white

.border-bottom
  position relative
  padding-bottom 72px
  margin-bottom 46px
  +mobile()
    margin-bottom 28px
    padding-bottom 0
  &:after
    pseudo(block, absolute)
    left 15px
    right 15px
    bottom 0
    height 1px
    background $aqua-back

.back-bucket
  &:after
    pseudo(block,absolute)
    top -35px
    left -98px
    background $white
    height 100vw
    width 100vw
    z-index -1
    +mobile()
      display none

.back-bucket-success
  &:after
    left: -182px;
    +tablet()
      left -127px
    +portrait()
      left -127px